package fr.pizzeria.model.menu;

import fr.pizzeria.model.Pizza.Pizza;

public class AfficherLesPizzas extends MenuAbstract{
	public AfficherLesPizzas(){
		super();
	}

	public String recupererNomMenu(){
		return "AfficherLesPizzas";
	}
	
	public void retournerAffichage(){
		System.out.println("1. Lister les pizzas");
	}
	
	public void action(Pizza[] pizza){
		int taille= pizza.length;
		 
		 // Utilisation d'une boucle <for()> afin d'éviter et s'adapter au nombre de ligne
		 for(int i=0;i<taille;i++){
			 System.out.println(pizza[i][1] + " -> " + pizza[i][2] +" ("+ pizza[i][3] +" €)" );
		 }
		 System.out.println("***** ------------------------*****");
	}
	

}
