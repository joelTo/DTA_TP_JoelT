package fr.pizzeria.console.PizzeriaAdminConsoleApp;

import java.util.Scanner;

import fr.pizzeria.model.*;
public class main {
	public static Scanner sc = new Scanner (System.in);
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Pizza[] pizza={new Pizza(0,"PEP","Pépéroni",12.50),
				new Pizza(1,"MAR","Pépéroni",14.00),
				new Pizza(2,"REI","La Reine",11.00),
				new Pizza(3,"FRO","La 4 fromages",12.00),
				new Pizza(4,"CAN","La cannibale",12.50),
				new Pizza(5,"SAV","La savoyarde",13.00),
				new Pizza(6,"ORI","L'orientale",13.50),
				new Pizza(7,"IND","L'indienne",14.00)
				};
		
		System.out.println(pizza[0].id+" "+pizza[0].code+" "+pizza[0].nom+" "+pizza[0].prix+" "+pizza[0].nbPizzas);
		affichagePizza(pizza);
		ajouterUnePizza(pizza);
		affichagePizza(pizza);


	}
	public static void affichagePizza( Pizza[] tabPizza){
		int taille= tabPizza.length;

		// Utilisation d'une boucle <for()> afin d'éviter et s'adapter au nombre de ligne
		for(int i=0;i<taille;i++){
			System.out.println(tabPizza[i].code + " -> " + tabPizza[i].nom +" ("+ tabPizza[i].prix +" €)" );
		}
		System.out.println("***** ------------------------*****");
		return;
	}

	public static  void ajouterUnePizza(Pizza[] tabPizza){
		int taille= tabPizza.length;

		Pizza[] tabPizza2 = new Pizza[taille+1];

		
		for(int i=0;i<taille;i++){
			System.out.println("test");
			tabPizza2[i].id=tabPizza[i].id;
			System.out.println("test");
			tabPizza2[i].code=tabPizza[i].code;
			tabPizza2[i].nom=tabPizza[i].nom;
			tabPizza2[i].prix=tabPizza[i].prix;
			
		}
		
		tabPizza2[taille].id=taille;

		System.out.println("Veuillez entrer Alias de votre tabPizza");
		String saisi = sc.next();
		tabPizza2[taille].code=saisi;

		System.out.println("Veuillez entrer le nom de votre tabPizza");
		String saisi2 = sc.next();
		tabPizza2[taille].nom=saisi2;

		System.out.println("Veuillez entrer le prix de votre tabPizza");
		Double saisi3 = sc.nextDouble();
		tabPizza2[taille].prix=saisi3;

		System.out.println("***** ------------------------*****");
		tabPizza=tabPizza2;
	}

