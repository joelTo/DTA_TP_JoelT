package fr.pizzeria.ihm.action;

import java.util.Scanner;
import fr.pizzeria.dao.PizzaDao;
import fr.pizzeria.ihm.IhmUtil;

public class UpdatePizza extends Action {

	private IhmUtil ihmUtil;

	public UpdatePizza() {
		super();
		this.setDescription("3. Mettre à jour une pizza");
		this.ihmUtil = ihmUtil;
	}

	@Override
	public void doAction() {
		System.out.println("Quelle pizza voulez-vous modifier ? ");
		int numPizzaModiffier = ihmUtil.getScanner().nextInt();

		System.out.println("Veuillez entrer la modification de l'Alias de votre tabPizza");
		String saisieAlias = ihmUtil.getScanner().next();

		System.out.println("Veuillez entrer la modification  du nom de votre tabPizza");
		String saisieNom = ihmUtil.getScanner().next();

		System.out.println("Veuillez entrer la modification  du prix de votre tabPizza");
		Double saisiePrix = ihmUtil.getScanner().nextDouble();
		update(numPizzaModiffier,saisieAlias,saisieNom ,saisiePrix);
	}

	@Override
	public void describeAction() {
		System.out.println(this.getDescription());
	}

}
